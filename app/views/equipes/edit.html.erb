<% provide(:title, "Modifier Equipe") %>
<h1>Modifier Equipe</h1>

<div class="row">
<div class="span6 offset3">
    <%= form_for(@equipe) do |f| %>
      <%= render 'shared/equipe_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      Ajouter les athletes qui participent dans cette equipe:
      </br>
      </br>
      <%= render 'athletecheckboxes' %>
      </br>
      <div class="submitButton">
        <%= f.submit "Modifier", class: "btn btn-large btn-primary" %>
      </br>
      </br>
        <%= link_to "Canceller et retourner a la liste d equipes", equipes_path %>
      </div>
    <% end %>

  </div>
</div>
