<% provide(:title, 'Evaluation Fonctionnelle:') %>
<h1>Preparation de lEvaluation Fonctionnelle</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @resultat do |f| %>
    <%= render 'shared/resultat_error_messages' %>

      <%= f.label :athlete_id, "Athlete" %>
      <div class="styled-select">
        <%= f.collection_select :athlete_id, User.order(:name), :id, :name %>
      </div>

      <%= f.label :evaluation_id, "Evaluation" %>
      <div class="styled-select">
        <%= f.collection_select :evaluation_id, Evaluation.order(:name), :id, :name %>
      </div>

      <div class="submitButton">
        <%= f.submit "Creer", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>