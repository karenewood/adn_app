<% provide(:title, "Modifier Test") %>
<h1>Modifier le Test</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@eval_test) do |f| %>
      <%= render 'shared/eval_test_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>


      <%= f.label :image %>
      <%= image_tag @eval_test.image.url(:medium) %>
      </br> 
      </br>
      Changez l'image:
      </br>
      <%= f.file_field :image %>
      </br>
      </br>
      Changez ou ajouter un video:
      </br>
      <%= f.label :video %>
      <%= f.text_field :video %>
      </br>
      </br>
      <% if @eval_test.video? %> 
        <p><%= raw(youtube_embed(@eval_test.video)) %></p>
      </br>
      </br>
      <% end %>
      </br>
      Changer les exercices recommandes pour ce test:
      </br>
      </br>
      <%= render 'exercisecheckboxes' %>
    </br>
      <div class="submitButton">
        <%= f.submit "Modifier", class: "btn btn-large btn-primary" %>
        </br>
        </br>
        <%= link_to "Canceller et retourner a la liste de tests", eval_tests_path %>
      </div>
    <% end %>

  </div>
</div>