<% provide(:title, 'Modifier Evaluation') %>
<h1>Modifier Evaluation</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@evaluation) do |f| %>
    <%= render 'shared/evaluation_error_messages' %>

      <%= f.label :name, "Nom" %>
      <%= f.text_field :name %>

      <%= f.label :description, "Description" %>
      <%= f.text_field :description %>
      <br />
      Modifier les tests inclus dans cette evaluation:
      <br />
      <br />
      <%= render 'evalcheckboxes' %>
      <div class="submitButton">
        <%= f.submit "Modifier", class: "btn btn-large btn-primary" %>
        </br>
        </br>
        <%= link_to "Canceller et retourner a la liste d evaluations", evaluations_path %>
      </div>
    <% end %>
  </div>
</div>